<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor
    xmlns="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0
                        https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
    name="java-ddd-archetype">

    <!-- Required Properties -->
    <requiredProperties>
        <requiredProperty key="groupId">
            <validationRegex>^[a-z][a-z0-9]*(\.[a-z][a-z0-9]*)*$</validationRegex>
        </requiredProperty>
        <requiredProperty key="artifactId">
            <validationRegex>^[a-z][a-z0-9-]*$</validationRegex>
        </requiredProperty>
        <!-- Optional with defaults (T014) -->
        <requiredProperty key="version">
            <defaultValue>1.0.0-SNAPSHOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="package">
            <defaultValue>${groupId}</defaultValue>
        </requiredProperty>
        <!-- Version tracking properties -->
        <requiredProperty key="forgeArchetypeVersion">
            <defaultValue>1.0.0-SNAPSHOT</defaultValue>
        </requiredProperty>
        <requiredProperty key="forgeTemplateVersion">
            <defaultValue>1.0.0</defaultValue>
        </requiredProperty>
    </requiredProperties>

    <!-- FileSet declarations for 5 DDD modules (T015) -->
    <fileSets>
        <!-- Parent POM -->
        <fileSet filtered="true" packaged="false" encoding="UTF-8">
            <directory></directory>
            <includes>
                <include>pom.xml</include>
            </includes>
        </fileSet>
    </fileSets>

    <!-- Module declarations for 5 DDD modules -->
    <modules>
        <!-- Domain Module -->
        <module id="${rootArtifactId}-domain" dir="__rootArtifactId__-domain" name="${rootArtifactId}-domain">
            <fileSets>
                <fileSet filtered="true" packaged="false" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>pom.xml</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="false" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/.gitkeep</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>

        <!-- Application Module -->
        <module id="${rootArtifactId}-application" dir="__rootArtifactId__-application" name="${rootArtifactId}-application">
            <fileSets>
                <fileSet filtered="true" packaged="false" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>pom.xml</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="false" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/.gitkeep</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>

        <!-- Infrastructure Module -->
        <module id="${rootArtifactId}-infrastructure" dir="__rootArtifactId__-infrastructure" name="${rootArtifactId}-infrastructure">
            <fileSets>
                <fileSet filtered="true" packaged="false" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>pom.xml</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="false" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/.gitkeep</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>

        <!-- Interface Module -->
        <module id="${rootArtifactId}-interface" dir="__rootArtifactId__-interface" name="${rootArtifactId}-interface">
            <fileSets>
                <fileSet filtered="true" packaged="false" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>pom.xml</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="false" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/.gitkeep</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>

        <!-- Bootstrap Module -->
        <module id="${rootArtifactId}-bootstrap" dir="__rootArtifactId__-bootstrap" name="${rootArtifactId}-bootstrap">
            <fileSets>
                <fileSet filtered="true" packaged="false" encoding="UTF-8">
                    <directory></directory>
                    <includes>
                        <include>pom.xml</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="true" encoding="UTF-8">
                    <directory>src/main/java</directory>
                    <includes>
                        <include>**/*.java</include>
                    </includes>
                </fileSet>
                <fileSet filtered="true" packaged="false" encoding="UTF-8">
                    <directory>src/main/resources</directory>
                    <includes>
                        <include>**/*.yml</include>
                        <include>**/*.yaml</include>
                        <include>**/*.properties</include>
                    </includes>
                </fileSet>
            </fileSets>
        </module>
    </modules>

</archetype-descriptor>
