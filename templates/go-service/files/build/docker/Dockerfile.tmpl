# Build stage
FROM golang:1.21-alpine AS builder

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -o /bin/{{.ProjectName}} ./cmd/{{.ProjectName}}

# Runtime stage
FROM alpine:3.19

RUN apk --no-cache add ca-certificates
COPY --from=builder /bin/{{.ProjectName}} /bin/{{.ProjectName}}

EXPOSE 8080
ENTRYPOINT ["/bin/{{.ProjectName}}"]
